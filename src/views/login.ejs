<!DOCTYPE html>
<html lang="en">
  <%- include('includes/head') %> <%- include('includes/navigation') %>
  <div
    style="max-width: 400px; margin: 50px auto"
    class="shadow-sm bg-white p-4"
  >
    <header>
      <h6 class="text-success">
        KNIGHTS OF ST.JOHN INTERNATIONAL AND LADIES AUXILIARY
      </h6>
    </header>
    <hr />
    <div class="text-center alert-warning"><%= message %></div>
    <form method="POST">
      <div class="form-group">
        <label for="">Enter Commandery/Auxiliary ID</label>
        <input
          class="form-control"
          type="number"
          name="membershipId"
          id="membershipId"
          required
        />
      </div>
      <div class="form-group">
        <label for="">Enter your email</label>
        <input
          class="form-control"
          type="email"
          name="email"
          id="email"
          required
        />
      </div>
      <div class="form-group">
        <label for="">Membership</label>
        <select
          name="membershipType"
          id="membershipType"
          class="form-control"
          required
        >
          <option selected disabled>Select</option>
          <option value="Commandery">Commandery</option>
          <option value="Auxiliary">Auxiliary</option>
        </select>
      </div>
      <div>
        <button class="btn-block btn-success btn" type="submit">Log in</button>
      </div>
    </form>
  </div>
  <%-include('includes/end.ejs')%>
</html>
